<%= flash[:success] %>
<% if @book.errors.any? %>
  <%= @book.errors.count %>件のエラーが発生しました
    <ul>
      <% @book.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
    </ul>
<% end %>

<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <h1>User info</h1>
      <div>
        <%= image_tag @user.get_profile_image(100,100) %>
        <h3><%= @user.name %></h3>
      </div>
      <div class="row">
      <%= link_to edit_user_path(@user), class:"btn btn-outline-secondary btn-block" do %>
      <i class="fas fa-user-cog"></i>
      <% end %>

      <h1>New Book</h1>
      

      <%= form_with model: @book, url: '/books', method: :post do |f| %>

      <h4>title</h4>
      <%= f.text_field :title %>

      <h4>opinion</h4>
      <%= f.text_area :body %>
      <p>
      <%= f.submit 'Create Book' %>
      </p>
      <% end %>
      </div>
    </div>

    <div class="col-md-8 offset-md-1">
       <h2>books detail</h2>


<div>
  <p>投稿ユーザー画像：<%= image_tag 'no_image.jpg' %></p>
  <p>タイトル：<%= @book.title %></p>
  <p>説明：<%= @book.body %></p>



  <% if @book.user == current_user %>
    <%= link_to "Edit", edit_book_path(@book.id), class: 'btn btn-sm btn-danger' %>
  <% end %>

  <% if @book.user == current_user %>
    <%= link_to "Delete", book_path(@book.id), class: "btn btn-sm btn-danger", method: :delete %>
  <% end %>

</div>