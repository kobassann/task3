<div class="container">
  <div class="row">
    <div class="mx-auto col-11 col-sm-10 col-lg-8 col-xl-6">

      <h2>User info</h2>
      <%= form_with model: @user do |f| %>

      <form>
        <div class="form-group">
          <label for="inputName">Name</label>
          <p><%= f.text_field :name, autofocus: true, id:"inputName" %></p>
        </div>
        <div class="form-group">
          <label for="inputImage">Image</label>
          <p><%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %></p>
        </div>
        <div class="form-group">
          <label for="inputintroduction">Introduction</label>
          <p><%= f.text_area :introdution %></p>
        </div>
        <div class="form-group">
          <%= f.submit "Update User" %>
        </div>
      <% end %>
    </div>
  </div>
</div>