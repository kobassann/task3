<%= flash[:success] %>
<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <h1>User info</h1>
      <div>
        <%= image_tag @user.get_profile_image(100,100) %>
        <h4>Name</h4>
        <span><%= @user.name %></span>
        <h4>Introdution</h4>
        <span><%= @user.introdution %></span>
      </div>
      <div class="row">
      <%= link_to edit_user_path(@user), class:"btn btn-outline-secondary btn-block" do %>
      <i class="fas fa-user-cog"></i>
      <% end %>

      <h1>New Book</h1>


      <%= form_with model: @book1, url: '/books', method: :post do |f| %>

      <h4>title</h4>
      <%= f.text_field :title %>

      <h4>opinion</h4>
      <%= f.text_area :body %>
      <p>
      <%= f.submit 'Create Book' %>
      </p>
      <% end %>
      </div>
    </div>

    <div class="col-md-8 offset-md-1">
       <h2>books</h2>
     <table class="table">
      <thead>
       <tr>
         <th>title</th>
         <th>opinion</th>
         <th colspan="3"></th>
       </tr>
      </thead>


      <% @book.each do |book| %>

      <tbody>
        <tr>
          <td>
           <%=  book.title %>
          </td>
          <td>
           <%=  book.body %>
          </td>
          <td>
           <%= link_to "Show", book_path(book.id) %>
          </td>

        </tr>
      </tbody>
      <% end %>
     </table>
    </div>
  </div>
</div>



