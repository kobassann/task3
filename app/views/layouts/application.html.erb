<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
          <a class="navbar-brand" href="/">
            <span>Bookers</span>
          </a>
          <div class="collapse navbar-collapse" id="navbarNavDropdown">
            <ul class="navbar-nav ml-auto">

            <% if user_signed_in? %>
             <li>
               <%= link_to user_path(current_user),class: "text-light" do %>
                <i class="fas fa-home"></i><span>Home</span>
               <% end %>
             </li>
             <li>
               <%= link_to users_path,class: "text-light" do %>
                <i class="fas fa-users"></i><span>Users</span>
               <% end %>
             </li>
             <li>
               <%= link_to books_path,class: "text-light" do %>
               <i class="fas fa-book-open"></i><span>Books</span>
               <% end %> 
             </li>
             <li>
               <%= link_to destroy_user_session_path, method: :delete,class: "text-light" do %>
               <i class="fas fa-sign-out-alt"></i><span>Log out</span>
               <% end %> 
             </li>
             <% else %>
             <li>
               <%= link_to root_path,class: "text-light" do %>
               <i class="fas fa-home"></i><span>Home</span>
               <% end %>
             </li>
             <li>
               <%= link_to home_about_path,class: "text-light" do %>
               <i class="fas fa-link"></i><span>About</span>
               <% end %>
             </li>
             <li>
               <%= link_to new_user_registration_path,class: "text-light" do %>
               <i class="fas fa-user-plus"></i><span>Sign up</span>
               <% end %>
             </li>
             <li>
               <%= link_to new_user_session_path,class: "text-light" do %>
               <i class="fas fa-sign-in-alt"></i><span>Log in</span>
               <% end %>
             </li>
            <% end %>
            </ul>
          </div>
        </div>
      </nav>


    </header>
    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>
    <%= yield %>
  </body>

  <footer>
    <div class="container mt-5">
      <div class="row">
        <div class="mx-auto">
          <p>CopyRight Infratop.inc</p>
        </div>
      </div>
    </div>
  </footer>
</html>
